<view class="pyg_index">
  <!-- 使用子组件 -->
  <SearchInput></SearchInput>
  <view class="index_swiper">
    <!-- 轮播图 -->
    <swiper autoplay="{{true}}" indicator-dots="{{true}}" circular="{{true}}">
      <swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
        <navigator url="{{item.navigator_url}}">
          <image src="{{item.image_src}}" mode="widthFix"></image>
        </navigator>
      </swiper-item>
    </swiper>
  </view>
  <!-- 导航 -->
  <view class="index_category">
    <navigator wx:for="{{categroyList}}" wx:key="name">
      <!-- mode="widthFix"的意思是自适应宽度 -->
      <image src="{{item.image_src}}" mode="widthFix"></image>
    </navigator>
  </view>
</view>
<!-- 楼层 -->
<view class="index_floor" wx:for="{{floorList}}" wx:for-item="item1" wx:for-index="index1" wx:key="floor_title">
  <view class="floor_group">
    <!-- 标题 -->
    <view class="floor_title">
      <image class="" src="{{item1.floor_title.image_src}}" mode="widthFix"></image>
    </view>
    <!-- 内容 -->
    <view class="floor_list">
      <navigator wx:for="{{item1.product_list}}" wx:for-item="item2" wx:for-index="index2" wx:key="name">
        <image src="{{item2.image_src}}" mode="{{index2===0?'widthFix':'scaleToFill'}}"></image>
      </navigator>
    </view>
  </view>
</view>